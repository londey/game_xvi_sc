{
    "name": "Rust Project",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": ["-v", "/run/host-services/ssh-auth.sock:/ssh-agent", "-e", "SSH_AUTH_SOCK=/ssh-agent", "-v","/home/${USERNAME}/.ssh:/root/.ssh:ro"],
    "forwardPorts": [8000],
    "customizations": {
        "vscode":
        {
            "settings": { 
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "asuka.insertnumbers",
                "bierner.markdown-footnotes",
                "bierner.markdown-mermaid",
                "github.copilot",
                "github.vscode-github-actions",
                "hediet.vscode-drawio",
                "mechatroner.rainbow-csv",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-wsl",
                "ms-vscode.cpptools-extension-pack",
                "streetsidesoftware.code-spell-checker",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "initializeCommand": "echo \"USERNAME=$USER\nUSER_UID=$(id -u $USER)\nGROUPNAME=$(id -gn $USER)\nGROUP_GID=$(id -g $USER)\" > .devcontainer/.env"
}
